<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:fitsSystemWindows="true">

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/composeBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 顶部状态栏：含设置按钮 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="48dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAdbStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="ADB: 未连接"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvModelName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="monospace"
                    android:text="模型：-"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- 右上角设置按钮 -->
            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|center_vertical"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="设置"
                android:src="@android:drawable/ic_menu_preferences"
                android:tint="@color/neon_cyan" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_dark" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMessages"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:padding="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_dark" />

        <!-- 底部输入栏：Compose 实现发光边框 -->
        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/composeInputBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp" />

    </LinearLayout>

    <!-- 语音录制遮罩 -->
    <FrameLayout
        android:id="@+id/voiceOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC0A0E14"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvVoiceOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="monospace"
            android:padding="16dp"
            android:text="正在倾听，请讲话..."
            android:textColor="@color/neon_cyan"
            android:textSize="16sp" />

    </FrameLayout>

</FrameLayout>
