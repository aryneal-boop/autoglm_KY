<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark">

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/composeBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- 标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="API 配置"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="monospace"
                android:text="配置模型服务接口参数"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/divider_dark" />

            <!-- Base URL -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="monospace"
                android:text="BASE_URL"
                android:textColor="@color/neon_cyan"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="monospace"
                android:text="例如：https://api.openai.com/v1"
                android:textColor="@color/text_hint"
                android:textSize="11sp" />

            <EditText
                android:id="@+id/etBaseUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@color/input_bg_dark"
                android:fontFamily="monospace"
                android:inputType="textUri"
                android:minHeight="44dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="14sp" />

            <!-- API Key -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="monospace"
                android:text="API_KEY"
                android:textColor="@color/neon_cyan"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/etApiKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@color/input_bg_dark"
                android:fontFamily="monospace"
                android:inputType="textPassword"
                android:minHeight="44dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="14sp" />

            <!-- Model Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="monospace"
                android:text="MODEL_NAME"
                android:textColor="@color/neon_cyan"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="monospace"
                android:text="例如：gpt-4o 或 glm-4"
                android:textColor="@color/text_hint"
                android:textSize="11sp" />

            <EditText
                android:id="@+id/etModelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@color/input_bg_dark"
                android:fontFamily="monospace"
                android:inputType="text"
                android:minHeight="44dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="monospace"
                android:text="执行环境"
                android:textColor="@color/neon_cyan"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="monospace"
                android:text="选择任务运行的控制层级"
                android:textColor="@color/text_hint"
                android:textSize="11sp" />

            <RadioGroup
                android:id="@+id/rgExecutionEnvironment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/rbExecEnvMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="主屏幕控制"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="monospace"
                    android:text="直接在当前屏幕操作，过程实时可见。"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />

                <RadioButton
                    android:id="@+id/rbExecEnvVirtual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="monospace"
                    android:text="虚拟隔离控制"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="monospace"
                    android:text="在后台子空间执行，不占用当前屏幕，保护隐私且不干扰使用。"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="@color/divider_dark" />

            <!-- 按钮 -->
            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@color/btn_bg_dark"
                android:fontFamily="monospace"
                android:text="保存配置"
                android:textColor="@color/neon_cyan"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/btn_bg_dark"
                android:fontFamily="monospace"
                android:text="返回"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
